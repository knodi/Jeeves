<div class="standard_table" id="events">
  <h3>Events for <%= @device.name.titlecase %></h3>
  <table>
    <tr><th>ID</th><th>Label</th><th>Time</th><th>Day</th></tr>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td><%= event.label.titlecase %></td>
        <td><%= event.created_at.in_time_zone.strftime('%I:%M %P') %></td>
        <td><%= event.created_at.in_time_zone.strftime('%m/%d/%Y') %></td>
      </tr>
    <% end %>
  </table>
</div>
